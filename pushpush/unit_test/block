int main(void){

	for(int i = 0; i < 5; i++){
		char filename[20];
		sprintf(filename, "file/test%d.txt", i);
		if((clnt_socks[i] = open(filename, O_WRONLY|O_CREAT, 0666)) < 0) perror("open");
	}

	char event[256];
	fgets(event, 256, stdin);
	send_msg_all(event, strlen(event));
	printf("done: sending all\n");
	

}
